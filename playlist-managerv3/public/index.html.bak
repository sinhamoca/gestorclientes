<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IPTV Playlist Manager</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Header -->
    <header>
        <h1>ðŸ“º IPTV Playlist Manager</h1>
        <div id="user-info"></div>
    </header>

    <!-- Main Container -->
    <main>
        <!-- Mensagens -->
        <div id="message-container"></div>

        <!-- Loading -->
        <div id="loading" class="loading hidden">
            <div class="spinner"></div>
            <p>Carregando...</p>
        </div>

        <!-- Listagem de Clientes -->
        <section id="clients-section">
            <h2>Seus Clientes</h2>
            
            <!-- Barra de Filtros e AÃ§Ãµes -->
            <div class="clients-toolbar">
                <!-- Filtro por Servidor -->
                <div class="filter-group">
                    <label for="server-filter">Filtrar por servidor:</label>
                    <select id="server-filter">
                        <option value="">Todos os servidores</option>
                    </select>
                </div>
                
                <!-- Contador de SeleÃ§Ã£o -->
                <div class="selection-info">
                    <span id="selection-count">0 selecionados</span>
                </div>
            </div>
            
            <div class="table-container">
                <table id="clients-table">
                    <thead>
                        <tr>
                            <th class="checkbox-col">
                                <input type="checkbox" id="select-all" title="Selecionar todos">
                            </th>
                            <th>Nome</th>
                            <th>Servidor</th>
                            <th>Aplicativo</th>
                            <th>MAC / Device Key</th>
                            <th>AÃ§Ã£o</th>
                        </tr>
                    </thead>
                    <tbody id="clients-tbody">
                        <tr>
                            <td colspan="6" class="text-center">Carregando clientes...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>

        <!-- Modal: Gerenciamento de Playlists -->
        <div id="playlist-modal" class="modal hidden">
            <div class="modal-content modal-large">
                <div class="modal-header">
                    <h3 id="playlist-modal-title">Gerenciar Playlists</h3>
                    <button class="close-btn" onclick="closePlaylistModal()">&times;</button>
                </div>
                
                <!-- Loading do Player -->
                <div id="player-loading" class="loading hidden">
                    <div class="spinner"></div>
                    <p id="player-loading-text">Conectando ao player...</p>
                </div>
                
                <!-- ConteÃºdo das Playlists -->
                <div id="playlist-content" class="hidden">
                    <!-- Lista de Playlists -->
                    <div class="playlist-list">
                        <h4>Playlists Atuais</h4>
                        <div class="table-container">
                            <table id="playlists-table">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>URL</th>
                                        <th>Tipo</th>
                                        <th>AÃ§Ãµes</th>
                                    </tr>
                                </thead>
                                <tbody id="playlists-tbody">
                                    <tr>
                                        <td colspan="4" class="text-center">Nenhuma playlist</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- FormulÃ¡rio -->
                    <div class="playlist-form">
                        <h4 id="form-title">Adicionar Nova Playlist</h4>
                        <form id="playlist-form">
                            <input type="hidden" id="playlist-id" value="">
                            
                            <div class="form-group">
                                <label for="playlist-name">Nome:</label>
                                <input type="text" id="playlist-name" required>
                            </div>

                            <div class="form-group">
                                <label for="playlist-url">URL:</label>
                                <input type="url" id="playlist-url" required>
                            </div>

                            <div class="form-group">
                                <label for="playlist-type">Tipo:</label>
                                <select id="playlist-type">
                                    <option value="m3u">M3U / M3U8</option>
                                    <option value="xtream">Xtream Codes</option>
                                    <option value="stalker">Stalker Portal</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>
                                    <input type="checkbox" id="playlist-protect">
                                    Proteger com PIN
                                </label>
                            </div>

                            <div class="form-group hidden" id="pin-group">
                                <label for="playlist-pin">PIN (4 dÃ­gitos):</label>
                                <input type="text" id="playlist-pin" maxlength="4" pattern="[0-9]{4}">
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-success">Salvar</button>
                                <button type="button" class="btn btn-secondary" onclick="resetForm()">Limpar</button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <div class="modal-footer">
                    <button class="btn btn-secondary" onclick="closePlaylistModal()">Fechar</button>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer>
        <p>IPTV Playlist Manager &copy; 2024 - Integrado com GestÃ£o de Clientes</p>
    </footer>

    <script src="/js/app.js"></script>
</body>
</html>
